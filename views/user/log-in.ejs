<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs')%>
  <body>
    <%- include('../partials/header.ejs')%>
    <div>
      <div class="log-in-container">
        <h4>Log in</h4>
      </div>
      <form action="/user/log-in" method="POST" class="log-in-form">
        <label for="name">Username</label>
        <input type="text" name="username" required />
        <div class="username-error errors"></div>
        <label for="name">Password</label>
        <input
          type="password"
          name="password"
          pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[!@#$%^&*_=+-]).{8,20}$"
          title="Please enter a password that is between 8 and 20 characters long and contains at least one number, one capital letter and one special symbol(!@#$%^&*=+-_)"
          required
        />
        <div class="password-error errors">
          <% if (failureMessage) {%>
          <p><%= failureMessage %></p>
          <%}%>
        </div>
        <button class="submit-button">Submit</button>
      </form>
    </div>
    <%- include('../partials/footer.ejs')%>
  </body>
</html>
